@import: ../token
@import: ../language

open Language


module OCaml : sig

  val rule : rule

end = struct

  let rule-let =
    pattern `(let(?:\s+rec)?|and)\s+([\w']+)`
      |> capture 1 (token Keyword)
      |> capture 2 (token FunctionName)

  % let rule-char-seq =
