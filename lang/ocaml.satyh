  let rule-integer =
    patterns [
      pattern `-?\d[\d_]*`
        |> capture 0 (token NumericConstant)
    ]

  let rule-string =
    pattern-block (|
      enter =
        pattern `"`
          |> capture 0 (token Operator)
    ; leave =
        pattern `"`
          |> capture 0 (token Operator)
    ; inner-style = (Some (String))
    ; inner = [
        pattern `\\[\\"n]`
          |> capture 0 (token EscapeChar)
      ]
    |)

  let rule-comment =
    pattern-block (|
      enter =
        pattern `\(\*`
          |> capture 0 (token Comment)
    ; leave =
        pattern `\*\)`
          |> capture 0 (token Comment)
    ; inner-style = (Some (Comment))
    ; inner = [
        pattern `".*"`
          |> capture 0 (include rule-string)
      ]
    |)

